{
  "name": "gas",
  "version": "1.0.0",
  "description": "",
  "main": "./src/main.ts",
  "scripts": {
    "build": "node esbuild.js",
    "link:dev": "ln -sf .clasp.dev.json .clasp.json",
    "link:prod": "ln -sf .clasp.prod.json .clasp.json",
    "push:dev": "npm run link:dev && clasp push",
    "push:prod": "npm run link:prod && clasp push",
    "open:dev": "npm run link:dev && clasp open-script",
    "open:prod": "npm run link:prod && clasp open-script",
    "deploy": "npm run build && npm run push",
    "test": "jest"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@types/google-apps-script": "^1.0.97",
    "@types/jest": "^29.5.14",
    "esbuild": "^0.25.3",
    "esbuild-gas-plugin": "^0.9.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.2",
    "typescript": "^5.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/test/**/*.test.ts"
    ],
    "moduleNameMapper": {
      "^#/(.+)": "<rootDir>/src/$1"
    }
  }
}
